{% extends 'base.html.twig' %}

{% block title %}Détails de la réservation{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails de la réservation</h1>

    <table class="table table-striped ">
        <tbody>
                    <tr>
                <th class="c-black Capitalize" scope="row">Réference rendez-vous n° : </th>
                <td class="c-black Capitalize ">{{ reservation.rdv.id }}</td>
            </tr>
            <tr>
                <th class="c-black Capitalize" scope="row">Prestation choisie:</th>
                <td class="c-black Capitalize ">{{ reservation.rdv.famille }}</td>
            </tr>
            <tr>
                <th class="c-black Capitalize" scope="row">Type de prestation</th>
                <td class="c-black Capitalize ">{{ reservation.rdv.type }}</td>
            </tr>



            <tr>
                <th class="c-black Capitalize" scope="row">Nom :</th>
                <td class="c-black Capitalize ">{{ reservation.name }}</td>
            </tr>
            <tr>
                <th class="c-black Capitalize" scope="row">Prénom :</th>
                <td class="c-black Capitalize ">{{ reservation.username }}</td>
            </tr>
            <tr>
                <th class="c-black Capitalize" scope="row">Email :</th>
                <td class="c-black respphone">
                    <a href="mailto:{{ reservation.email }}">{{ reservation.email }}</a>
                </td>
            </tr>
            <tr>
                <th class="c-black Capitalize" scope="row">Téléphone :</th>

                <td class="c-black respphone">
                    <a href="tel:{{ reservation.tel }}">+33 {{ reservation.tel }}</a>
                </td>
            </tr>
            <tr>
                <th class="c-black Capitalize" scope="row">Lieu du rendez-vous:</th>
                <td class="c-black">{{ reservation.lieu }}</td>
            </tr>

            <tr>
                <th class="c-black Capitalize" scope="row">Adresse du domicile</th>
                <td class="c-black">{{ reservation.adresse }}</td>
            </tr>
            <tr>

        </tbody>
    </table>

    <a class="btn btn-secondary mb-3" href="{{ path('listereservation') }}">Retour à la liste des réservations</a>
</div>
{% endblock %}
