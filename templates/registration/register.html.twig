{% extends 'fond.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
  <img src="../images/logo.jpg" class="logo" alt="">
  <div class=" container inscription">

    <div class="row">
      <div class="col ">

        <h1 class=" text-center centre Capitalize c-black">Formulaire d'inscription
        </h1>

        {{ form_start(registrationForm) }}
        <fieldset class="mb-3">
          <legend>Mon identité</legend>
          {{ form_row(registrationForm.username, {label: 'Prénom :'}) }}
          {{ form_row(registrationForm.name, {label: 'Nom :'}) }}

          {{ form_row(registrationForm.email, {label: 'Email :'}) }}
        </fieldset>
        {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe :'}) }}

        <!-- <button type="button" id="showPasswordBtn" class="btn btn-outline-secondary">Afficher le mot de passe</button> -->

        {{form_row(registrationForm.agreeTerms) }}
        <a href="{{ path('condition') }}">Conditions générales</a>

        {{form_row(registrationForm.captcha)}}
        <!-- cle de securite recaptcha -->

        <button type="submit" class="btn btn-inscr my-3 centre w-100">
          <i class="fa-solid fa-user-plus"></i>S'inscrire</button>
        {{ form_end(registrationForm) }}

        <div class="text-center">
          <p class="c-black">Si vous souhaitez devenir membre et déposer vos annonces, merci de nous contacter par e-mail :</p>
          <a href="mailto:contact-arboreves@gmail.fr" class="btn btn-primary">Nous joindre par e-mail</a>
        </div>

      </div>

    </div>
  </div>
  <a href="{{ path('home')}}" class="btn btn-home centre">
    <i class="fa-solid fa-house"></i>Accueil</a>

{% endblock %}
