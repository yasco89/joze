{% extends 'base.html.twig' %}

{%  block title %} Avis{% endblock %}

{% block body %}

  <div class="container mt-5 h-100">
    <h2>Laissez un avis</h2>
    <div class="col-12">
      <div class="d-grid gap-2 col-6 mx-auto">
        <button type="button" class="btn-parametre" data-bs-toggle="modal" data-bs-target="#exampleModal">
          <i class="fa-regular fa-square-plus" style="color: #ffffff;"></i>
          Ajouter un avis
        </button>
      </div>
    </div>
  {% if app.user %}
    <form enctype="multipart/form-data" method="post" action="#">
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Ajouter un avis</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

              {% if users %}
              <div class="mb-3">
                <label for="prenom" class="form-label">Prénom :</label>
                <input class="form-control text-uppercase bold text-success" type="text" name="prenom" value="{{ app.user.username }}">
              </div>
              <div class="mb-3">
                <label for="name" class="form-label">Nom :</label>
                <input class="form-control text-uppercase bold text-success" type="text" name="name" value="{{ app.user.name }}">

              </div>

              <div class="mb-3">
                <label for="email" class="form-label">Email :</label>
                <input class="form-control text-uppercase bold text-success" type="email" name="email" value="{{ app.user.email }}">

              </div>

              {% else %}
                <p>Aucun utilisateur trouvé.</p>
              {% endif %}

              <div class="form-group w-100 p-3">
                <label for="type" class="form-label">Prestation</label>
                <select class="form-control" id="type" name="prestation">
                  <option value="0" selected="selected" disabled="disabled">Prestation</option>
                  {% for p, c in prestation %}
                    <option value="{{ p }}">{{ c }}</option>
                  {% endfor %}
                </select>
              </div>

              <div class="form-group">
                <label for="name">Description :</label>
                <input type="text" class="form-control" id="name" name="description" required="required">
              </div>

              <div class="form-group">
                <label for="note">Note : /5</label>
                <p><input type="number" class="form-control" id="note" name="note" required="required"></p>
              </div>


            </div>



            <div class="button">
              <button type="submit" class="btn btn-primary my-3 centre">Enregistrer l'avis</button>

            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
            <a href="{{ path('home') }}" class="btn btn-primary">Page d'Accueil</a>
          </div>
        </div>
      </div>
    </div>
  </form>
    {% endif %}
</div>

{% endblock %}
